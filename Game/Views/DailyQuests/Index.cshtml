@model IEnumerable<Game.Models.DailyQuest>

<h1>Zadania dzienne</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Doświadczenie</th>
            <th>Złoto</th>
            <th>Odnowienie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quest in Model)
        {
            <tr>
                <td>@quest.Name</td>
                <td>@quest.Description</td>
                <td>@quest.RewardExperience</td>
                <td>@quest.RewardGold</td>
                <td>@quest.ResetTime.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
