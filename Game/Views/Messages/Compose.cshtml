@model Game.Models.Message

<h1>Nowa Wiadomość</h1>
<form method="post" action="@Url.Action("Compose", "Messages")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="SenderId" value="@Model.SenderId" />

    <div class="form-group">
        <label for="ReceiverId">Do:</label>
        <select name="ReceiverId" class="form-control">
            @foreach (var user in ViewBag.Users as IEnumerable<Game.Models.User>)
            {
                <option value="@user.Id">@user.Email</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Content">Treść:</label>
        <textarea name="Content" class="form-control" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Wyślij</button>
</form>
